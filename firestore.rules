rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to allow anonymous read for graceful degradation
    function canReadAnonymously() {
      return isAuthenticated(); // Require authentication for reads
    }
    
    // User Preferences - Users can only read/write their own preferences
    // Allow reads for authenticated users (including server-side with userId)
    match /userPreferences/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // User Interactions - NEW: For personalization tracking
    // Users can only read/write their own interaction sessions
    match /userInteractions/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Interaction sessions (nested under userInteractions)
      match /sessions/{sessionId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
        allow create: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Anti-Repetition Cache - NEW: Prevent showing same outfits
    match /antiRepetitionCache/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }

    // Exploration Metrics - NEW: Track adaptive exploration success
    match /explorationMetrics/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Comprehensive Preferences - NEW: For preference engine (nested collections)
    match /users/{userId}/preferences/{subcollection}/{docId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // User interactions tracking (colors, styles, shopping)
    match /users/{userId}/interactions/{interactionType} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Blocklists (hard, soft, temporary)
    match /users/{userId}/blocklists/{blocklistType} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Recommendation History - Users can only read/write their own recommendations
    // Anonymous users can create recommendations but they won't be persisted long-term
    match /recommendationHistory/{recommendationId} {
      allow read: if canReadAnonymously() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if true; // Allow anonymous creation for demo purposes
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Users collection - Users can read/write their own profile
    match /users/{userId} {
      allow read: if canReadAnonymously() || isOwner(userId);
      allow write: if isOwner(userId);
      
      // User's recommendation history (nested under users)
      match /recommendationHistory/{recommendationId} {
        allow read: if canReadAnonymously() || isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // User's feedback on recommendations (nested under users)
      match /feedback/{recommendationId} {
        allow read: if canReadAnonymously() || isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // User's outfit usage tracking (nested under users)
      match /outfitUsage/{usageId} {
        allow read: if canReadAnonymously() || isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // User's liked outfits (nested under users)
      match /likedOutfits/{outfitId} {
        allow read: if canReadAnonymously() || isOwner(userId);
        allow write: if isOwner(userId);
        allow create: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
      
      // User's wardrobe items (nested under users)
      match /wardrobeItems/{itemId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
        allow create: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
      
      // User's saved wardrobe outfit combinations (nested under users)
      match /wardrobeOutfits/{outfitId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
        allow create: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
    }
    
    // System Logs - Allow write from anywhere (error logging), no reads
    match /systemLogs/{logId} {
      allow create: if true; // Allow all error logging
      allow read: if false; // No reads (logs are for admin only)
      allow update, delete: if false; // Logs are immutable
    }
    
    // Audit Logs - Users can read their own logs, only Cloud Functions can write
    match /auditLogs/{logId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // User Preferences History - Users can read their own history
    match /userPreferencesHistory/{historyId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only created by transactions
    }
    
    // Deleted Items - Users can read their own deleted items (for recovery)
    match /deletedItems/{deletionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only created by audit log system
    }
    
    // Cleanup Jobs - Read-only for authenticated users, write-only for Cloud Functions
    match /cleanupJobs/{jobId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // API Cache - NEW: For caching API responses (server-side only)
    match /apiCache/{cacheKey} {
      allow read: if true; // Allow all reads for cache hits
      allow create: if true; // Allow server to create cache entries
      allow update: if true; // Allow server to update cache entries
      allow delete: if false; // No deletions (let TTL expire naturally)
    }
    
    // Rate Limits - NEW: For rate limiting per user (server-side tracking)
    match /rateLimits/{userId} {
      allow read: if true; // Allow server to check rate limits
      allow create: if true; // Allow server to create rate limit entries
      allow update: if true; // Allow server to update rate limit counters
      allow delete: if false; // No deletions (let them expire naturally)
    }
    
    // Archive Collections - No direct access (admin only via Cloud Functions)
    match /auditLogsArchive/{logId} {
      allow read, write: if false;
    }
    
    match /recommendationHistoryArchive/{recId} {
      allow read, write: if false;
    }
    
    match /deletedItemsArchive/{deletionId} {
      allow read, write: if false;
    }
    
    // Default deny all access for security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
